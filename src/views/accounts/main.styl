
@import '~assets/stylus/variable'
@import '~assets/stylus/mixin'

// 全屏
.full
  width 100%
  height 100vh

// 主容器
.login-container
  width 100%
  height 100%
  display flex
  flex-direction column
  background $color-fff
  position relative
  .container-wrap
    width 100%
    height 100%

// 菜单栏
.login-tab
  text-align center
  font-size 38px
  margin-bottom 24px
  .tab-item
    width 188px
    padding-bottom 22px
    display inline-block
    position relative
    color $color-999
    border-name(2px, #e5e5e5, solid, bottom)
  .active
    color $color-theme-sub
    border-color $color-theme-sub
    &:after
      content '\0020'
      position absolute
      left 84px
      bottom 0
      border-name(10px, transparent, solid, left)
      border-name(10px, transparent, solid, right)
      border-name(10px, #f95a29, solid, bottom)


// 表单
.login-form
  padding-top 40px

.form-item
  margin 14px 46px
  &.form-btn
    margin-top 50px
  .item-input
    display flex
    flex-direction row
    align-items center
    background-color #f0f0f0
    input
      background-color #f0f0f0
      color $color-text
      height 100px
      width 100%
      line-height 1.5em
      font-size 32px
      border-radius 4px
      padding-left 1em
      padding-right 1em
      border none
      outline none
      &::placeholder {
        color #babac0
        font-size 26px
      }
  .item-code
    width 260px
    height 100px
    font-size 26px
    display block
    text-align center
    line-height 100px
    color $color-fff
    background-color $color-ccc
    &.active
      background-color $color-theme-sub
  .item-captcha
    width 200px
    height 100px
    display block
  .item-country
    padding 0 32px
    position relative
    padding-right 50px
    border-name(2px, $color-999, solid, right)
    &:after
      content ""
      border-left 12px solid transparent
      border-right 12px solid transparent
      border-top 12px solid $color-999
      position absolute
      right 12px
      bottom 8px
  .item-icon
    width 90px
    height 90px
    display block
    position relative
    .icon-eye
      width 40px
      height 40px
      pos-center()
      background-size contain
      background-repeat no-repeat
      background-position center center
    .icon-eye-open
      background-image url('./images/icon-eye-open.png')
    .icon-eye-close
      background-image url('./images/icon-eye-close.png')

  .item-link
    padding-top 10px
    display flex
    justify-content space-between
    a
      color $color-text
  .item-tips
    width 100%
    font-size 28px
    line-height 32px
    margin-top 14px
    height 32px
    background none
    color $color-999
  .error-msg
    color $color-error-msg